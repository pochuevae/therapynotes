{
  "name": "therapy-journal",
  "version": "1.0.0",
  "description": "Telegram Mini App for therapy journaling with voice transcription and AI summarization",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/index.js",
    "client:dev": "cd client && npm start",
    "build": "cd client && npm run build --omit=dev",
    "start": "node simple-server.js",
    "install:all": "npm install && cd client && npm install",
    "postinstall": "cd client && npm install --omit=dev",
    "db:migrate": "node server/database/migrate.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "node-telegram-bot-api": "^0.64.0",
    "sqlite3": "^5.1.6",
    "pg": "^8.11.3",
    "multer": "^1.4.5-lts.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "openai": "^4.20.1",
    "fluent-ffmpeg": "^2.1.2",
    "uuid": "^9.0.1",
    "moment-timezone": "^0.5.43",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "telegram",
    "mini-app",
    "therapy",
    "journal",
    "voice",
    "transcription",
    "ai"
  ],
  "author": "Therapy Journal Team",
  "license": "MIT"
}
